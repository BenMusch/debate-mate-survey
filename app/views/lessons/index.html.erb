<% provide(:title, "Lessons") %>

<h1>Lessons</h1>
<% if !admin? %>
  <center>
    <%= link_to "Plan a Lesson", new_lesson_path,
                                 class: "btn btn-primary btn-center" %>
  </center>
<% end %>
<div class="row">
  <div class="col-md-6">
    <h2>Upcoming</h2>
    <% @upcoming_lessons.each do |lesson| %>
      <%= render 'lesson', lesson: lesson %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2>Completed</h2>
    <% @completed_lessons.each do |lesson| %>
      <%= render 'lesson', lesson: lesson %>
    <% end %>
  </div>
</div>
